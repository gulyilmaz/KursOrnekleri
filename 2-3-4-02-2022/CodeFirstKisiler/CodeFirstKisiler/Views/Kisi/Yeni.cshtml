@model CodeFirstKisiler.Models.Kisiler
@{
    ViewBag.Title = "Yeni";
}

<h2>Yeni Kişi</h2>
@using (Html.BeginForm())
{
    <div class="form-group">
        @Html.LabelFor(x => x.Ad, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextBoxFor(x => x.Ad, new { @class = "form-control", placeholder = "Kişi Adı", name = "ad" })
        </div>

    </div>

    <div class="form-group">
        @Html.LabelFor(x => x.Soyad, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextBoxFor(x => x.Soyad, new { @class = "form-control", placeholder = "Kişi Soyadı", name = "soyad" })
        </div>

    </div>


    <div class="form-group">
        @Html.LabelFor(x => x.Yas, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextBoxFor(x => x.Yas, new { @class = "form-control", placeholder = "Kişi Yaşı", name = "yas" })
        </div>

    </div>
    <br />
    <div class="form-group">
        <input type="submit"  value="Kaydet" class="btn btn-success"/>
    </div>

    <div class="form-group">
        @if(ViewBag.Result!=null)
                {
                    <div class="alert alert-@ViewBag.Status">
                        @ViewBag.Result

                    </div>
                }


    </div>


}

