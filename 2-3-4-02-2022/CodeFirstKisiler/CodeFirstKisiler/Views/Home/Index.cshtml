@model CodeFirstKisiler.Models.ViewsModel.HomePageViewsModel
@{
    ViewBag.Title = "Index";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <h2>Ana Sayfa</h2>
            <hr />
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <div>
                @Html.ActionLink("Yeni Kişi", "Yeni", "Kisi",null, new { @class = "btn btn-success" })

            </div>
            <br />
            <ul class="list-group">
                <li class="list-group-item active"> Kişiler</li>
                @foreach (var item in Model.Kisiler)
                {
            <li class="list-group-item">
                @Html.ActionLink("Düzenle", "Duzenle", "Kisi", new { kisiid = item.ID }, new { @class = "btn btn-warning" })
                @Html.ActionLink("Sil", "Sil", "Kisi", new { kisiid = item.ID }, new { @class = "btn btn-danger" })
                <i class="far fa-user red"></i>
                @(item.Ad+" "+item.Soyad)  (@item.Yas)

            </li>

                }

            </ul>




        </div>
        <div class="col-md-6">
            <div>
                @Html.ActionLink("Yeni Adres", "Yeni", "Adres", null, new { @class = "btn btn-success" })

            </div>
            <br />
            <ul class="list-group">
                <li class="list-group-item active">Adresler</li>

                @foreach (var item in Model.Adresler)
                {
                    <li class="list-group-item">
                        @Html.ActionLink("Düzenle", "Duzenle", "Adres", new { adresid = item.ID }, new { @class = "btn btn-warning" })
                        @Html.ActionLink("Sil", "Sil", "Adres", new { adresid = item.ID }, new { @class = "btn btn-danger" })
                        <i class="fas fa-home red"></i>
                        @item.AdresTanim (<i>@(item.Kisiler.Ad +" "+item.Kisiler.Soyad)</i>)
                    </li>
                }

            </ul>



        </div>
    </div>




</div>