@model KitapEvi_Models.Models.ViewsModel.KitapVM
@{
    var title = "Kitap Detayları Oluştur";
}

<form method="post">
    <div class="row border p-3">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Kitap.KitapID" />
        <input type="hidden" asp-for="Kitap.KitapDetay.KitapDetayID" />
        @if(Model.Kitap.KitapID!=0|| Model.Kitap.KitapDetayID!=0)
        {
            title = "Kitap Detay Bilgilerini Düzenle";
        }
        <div class="col-12 border-bottom">
            <h2 class="text-primary">@title</h2>
        </div>
        <div class="col-8 pt-4">
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Kitap.KitapAdi" class="form-control"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Kitap.KitapAdi" disabled class="form-control" />
                </div>


            </div>

            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Kitap.KitapDetay.BolumSayisi" class="form-control"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Kitap.KitapDetay.BolumSayisi" class="form-control" />
                    <span asp-validation-for="Kitap.KitapDetay.BolumSayisi" class="text-danger"></span>
                </div>


            </div>



            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Kitap.KitapDetay.KitapSayfasi" class="form-control"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Kitap.KitapDetay.KitapSayfasi" class="form-control" />
                    <span asp-validation-for="Kitap.KitapDetay.KitapSayfasi" class="text-danger"></span>
                </div>


            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Kitap.KitapDetay.Agirlik" class="form-control"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Kitap.KitapDetay.Agirlik" class="form-control" />
                    <span asp-validation-for="Kitap.KitapDetay.Agirlik" class="text-danger"></span>
                </div>


            </div>
            <div class="form-group row">
                @if (Model.Kitap.KitapID != 0 || Model.Kitap.KitapDetayID != 0)
                {
                    <button type="submit" class="btn btn-primary form-control">Güncelle</button>
                }
                else
                {
                    <button type="submit" class="btn btn-primary form-control">Oluştur</button>
                }

            </div>

            </div>
        </div>






</form>