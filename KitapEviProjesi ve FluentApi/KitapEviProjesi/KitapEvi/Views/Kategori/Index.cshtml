@model IEnumerable<KitapEvi_Models.Models.Kategori>
<div class="border p-4 bg-white">
    <div class="row">
        <div class="col-md-9">
            <h2 class="text-info">Kategori Listesi</h2>
        </div>
        <div class="col-md-3">
            <a class="btn btn-info form-control" asp-action="Update_Insert">Yeni Oluştur</a>
        </div>


    </div>
    <div class="row">
        <div class="col-md-3">
            <a class="btn btn-success form-control" asp-action="CokluEkleme3">Çoklu Ekle 3</a>
        </div>
        <div class="col-md-3">
            <a class="btn btn-success form-control" asp-action="CokluEkleme10">Çoklu Ekle 10</a>
        </div>
        <div class="col-md-3">
            <a class="btn btn-danger form-control" asp-action="CokluSilme3">Çoklu Sil 3</a>
        </div>
        <div class="col-md-3">
            <a class="btn btn-danger form-control" asp-action="CokluSilme10">Çoklu Sil 10</a>
        </div>
    </div>
    <br />
    <div>
        @if (Model.Count() > 0)
        {

            <table class="table table-striped border">
                <tbody>
                    <tr class="table-secondary">
                        <th>Kategori Adı</th>
                        <th></th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.KategoriAd</td>
                            <td>
                                <a class="btn btn-primary text-white" asp-action="Update_Insert" asp-route-id="@item.KategoriID">Düzenle</a>

                                <a class="btn btn-danger text-white" asp-action="Delete" asp-route-id="@item.KategoriID">Sil</a>
                            </td>


                        </tr>

                    }

                </tbody>




            </table>



        }
        else
        {
            <p>Listelenecek Kategori Bulunamadı...</p>
        }
    </div>
</div>








